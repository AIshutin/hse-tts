{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
      {
        "type": "PitchShift",
        "args": {
          "min_transpose_semitones": -5.0,
          "max_transpose_semitones": 3.0,      
          "p": 0.0,
          "sample_rate": 16000 
        }
      },
      {
        "type": "TimeStretch",
        "args": {
          "min_rate": 0.9,
          "max_rate": 1.2,
          "p": 0.0
        }
      },
      {
        "type": "AddGaussianNoiseSNR",
        "args": {
          "min_snr_db": 5.0,
          "max_snr_db":25.0,
          "p": 0.0,
          "sample_rate": 16000
        }
      },
      {
        "type": "Gain",
        "args": {
          "min_gain_in_db": -15.0,
          "max_gain_in_db": 5.0,
          "p": 0.0
        }
      }
    ],
    "spectrogram": []
  },
  "arch": {
    "type": "DeepSpeechModel2",
    "args": {
      "n_channels": 128,
      "fc_hidden": 1024,
      "rnn_hidden": 256,
      "rnn_layers": 1
    }
  },
  "data": {
    "train": {
      "batch_size": 128,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "train",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 128,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 1e-2,
      "momentum": 0.99
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {
      "zero_infinity": false
    }
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "BeamSearchWERMetric",
      "args": {
        "name": "WER (bs)",
        "beam_size": 5
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "BeamSearchCERMetric",
      "args": {
        "name": "CER (bs)",
        "beam_size": 5
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 51,
      "anneal_strategy": "cos",
      "max_lr": 1e-2,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 10,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 500,
    "grad_norm_clip": 10
  }
}
